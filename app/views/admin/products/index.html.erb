<div class="row">
    <div class="col-md-12">
        <h1>Product List</h1>
        <div class="pull-right">
            <%= link_to("新增产品", new_admin_product_path, class:"btn btn-primary")%>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Product Pic</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                <% @products.each do |product| %>
                <tr>
                    <td><%= product.id %></td>

                    <td><%= link_to product.title, admin_product_path(product)%></td>
                    <td><%= product.price %></td>
                    <td><%= link_to("Edit", edit_admin_product_path(product))%></td>
                    <td><%= link_to("Deleted", admin_product_path(product), method: :delete, "data-confirm":   "亲！确定要删除吗？？？请三思呐！") %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
