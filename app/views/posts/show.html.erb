<div class="container-fluid syllabus-page post-show">
  <div class="row lesson-navbar">
    <div class="container navbar-content">
      <div class="lesson-title">
        <%= @lesson.title %>
      </div>
      <div class="lesson-syllabus">
        <%= link_to syllabus_lesson_path(@lesson) do %>
        <i class="fa fa-list-ul" aria-hidden="true"></i>
        目录
        <% end %>
      </div>
    </div>
  </div>

  <div class="container lesson-content">
    <div class="post-title">
      <%= @post.title %> <span class="pull-right">所属章节：<%= @chapter.title %></span>
    </div>
    <div class="post-content">
      <div class="intro-markdown">
        <%= raw @post.description %>
      </div>
    </div>
    <div class="post-eva">
      <div class="slogan">
        <span class="text">对本页内容的感受如何？</span>
        <button type="button" class="btn btn-default" data-toggle="modal" data-target=".bs-example-modal-lg">
          🗣 我要吐槽
        </button>
      </div>
      <div class="row text-center">
        <div class="col-sm-4">
          <%= link_to upvote_post_path(@post), method: :post, class: "btn btn-default" do %>
          <span class="emjoy">😄</span> So easy
          <% end %>
        </div>
        <div class="col-sm-4">
          <%= link_to downvote_post_path(@post), method: :post, class: "btn btn-default"  do %>
          <span class="emjoy">😐</span> 还Ok啦
          <% end %>
        </div>
        <div class="col-sm-4">
          <button type="button" class="btn btn-default" data-toggle="modal" data-target=".bs-example-modal-lg">
          <span class="emjoy">😭</span> 崩溃了
          </button>
        </div>
      </div>
    </div>
    <div class="post-page-footer text-center">
      <div class="btn-left">
        <% if @left.present? %>
        <%= link_to  post_path(@left), class: "btn btn-left-url btn-default" do %>
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
        上一页
        <% end %>
        <% end %>
      </div>
      <div class="btn-alert">
        <i class="fa fa-lightbulb-o" aria-hidden="true"></i>
        可以使用
        <i class="fa fa-long-arrow-left" aria-hidden="true"></i><i class="fa fa-long-arrow-right" aria-hidden="true"></i>
        键进行翻页
      </div>
      <div class="btn-right">
        <% if @right.present? %>
        <%= link_to post_path(@right), class: "btn btn-right-url btn-success" do %>
        下一页
        <i class="fa fa-arrow-right" aria-hidden="true"></i>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- 以下是模态 -->
<!-- Large modal -->


<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="gridSystemModalLabel">遇到什么问题了吗？</h4>
      </div>
      <div class="content">
        <p>反馈：</p>
        <%= simple_form_for [@post, @post_eva], method: :post do |f| %>
        <%= f.input :content %>
        <%= f.input :eva_image, as: :file %>
        <div class="feedback-btn">
          <div class="feedback-btn"><%= f.submit "吐槽", class: "btn btn-default" %></div>
          <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div> method: :post,

