<!DOCTYPE html>
<html>
    <head>
        <title>JDstore 后台</title>
        <%= stylesheet_link_tag   'application', media: 'all', 'data-turbolinks-track' => true%>
        <%= javascript_include_tag'application', 'data-turbolinks-track' => true%>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <div class="container">
            <%= render "common/navbar"%>
            <%= render "common/flashes" %>
            <div class="row">
                <div class="col-md-2">
                    <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
                        <li><%= link_to("产品中心", admin_products_path, class: "btn btn-success")%></li>
                        <li><%= link_to("订单中心", admin_orders_path, class: "btn btn-primary")%></li>
                        <li><%= link_to("分类管理", admin_categories_path, class: "btn btn-success") %></li>
                        <li><%= link_to("首页轮播图管理", admin_slider_photos_path, class: "btn btn-primary") %></li>
                    </ul>
                </div>
                <div class="col-md-10">
                    <%= yield %>
                </div>
            </div>
        </div>
    </body>
</html>
